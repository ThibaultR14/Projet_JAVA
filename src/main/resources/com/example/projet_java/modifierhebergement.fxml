<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.JAVAcontroller.AdminModifierHebergementController"
      spacing="10.0" alignment="CENTER">

    <padding>
        <Insets top="15" right="20" bottom="15" left="20"/>
    </padding>

    <Label text="Modifier Hébergement" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <TextField fx:id="nomField" promptText="Nom"/>
    <TextField fx:id="adresseField" promptText="Adresse"/>
    <TextField fx:id="etoilesField" promptText="Nombre d'étoiles (1-5)"/>

    <Button text="Enregistrer" onAction="#enregistrerModification"/>
</VBox>
