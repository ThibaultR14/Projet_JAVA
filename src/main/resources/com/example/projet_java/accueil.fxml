<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.JAVAcontroller.AccueilController"
            styleClass="root">

    <top>
        <HBox spacing="20" alignment="CENTER_RIGHT" styleClass="header-bar">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <!-- Logo à gauche -->
            <Label text="NotBooking" styleClass="logo-label"/>

            <!-- Espace extensible pour pousser le reste à droite -->
            <Region HBox.hgrow="ALWAYS"/>

            <!-- Boutons à droite -->

            <Button text="Connexion" fx:id="connexionButton" onAction="#onConnexionClicked"
                    styleClass="button-primary"/>
            <Button text="Inscription" fx:id="inscriptionButton" onAction="#onInscriptionClicked"
                    styleClass="button-success"/>
            <Button text="Ajouter un hebergement" onAction="#onUploadClicked" fx:id="uploadButton" styleClass="button-secondary"/>

        </HBox>
    </top>




    <!-- Centre de la page -->
    <center>
        <VBox spacing="20" alignment="CENTER">
            <padding>
                <Insets top="50" right="50" bottom="50" left="50"/>
            </padding>
            <Label text="Trouvez votre hébergement idéal" styleClass="title-label"/>
            <TextField fx:id="villeField" promptText="Où allez-vous ?" prefWidth="300"
                       styleClass="text-field"/>
            <HBox spacing="15" alignment="CENTER">
                <DatePicker fx:id="dateArriveePicker" promptText="Date d'arrivée"
                            styleClass="date-picker"/>
                <DatePicker fx:id="dateDepartPicker" promptText="Date de départ"
                            styleClass="date-picker"/>
            </HBox>
            <Button text="Rechercher" fx:id="rechercherButton" onAction="#onRechercherClicked"
                    styleClass="button-primary"/>
        </VBox>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER" styleClass="footer-bar">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="© 2025 - NotBooking"/>
        </HBox>
    </bottom>

</BorderPane>
