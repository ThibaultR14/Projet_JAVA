<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.JAVAcontroller.MesReservationsController"
            styleClass="root2">

    <!-- Header réutilisable -->
    <top>
        <fx:include source="header.fxml"/>
    </top>

    <!-- Footer réutilisable -->
    <bottom>
        <fx:include source="footer.fxml"/>
    </bottom>

    <!-- Centre -->
    <center>
        <VBox spacing="25" alignment="TOP_CENTER">
            <padding>
                <Insets top="30" bottom="30" left="40" right="40"/>
            </padding>

            <!-- ✅ Titre principal -->
            <Label text="Mes Réservations"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1E3A8A;"/>

            <!-- ✅ Conteneur de réservations -->
            <VBox fx:id="reservationsContainer"
                  spacing="15"
                  alignment="TOP_CENTER"
                  maxWidth="800"
                  style="-fx-background-color: #F9FAFB; -fx-padding: 25; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);"/>
        </VBox>
    </center>

</BorderPane>
